{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "./"
    ],
    "paths": {
      "@interactjs/*": ["./@interactjs/*"],
      "interactjs": ["./@interactjs/interactjs"]
    },
    "types": [],
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "outDir": "./@interactjs"
  },
  "include": [
    "./interact-test.ts",
    "../**/*.ts"
  ],
  "exclude": [
    "./@interactjs/**"
  ]
}
